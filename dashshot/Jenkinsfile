pipeline {
  agent any

  stages {
    stage('Create PDF') {
      steps {
        script {
          dockerImage = docker.build('dashshot', 'dashshot')
          args = "-v ${pwd()}:/pdf"
          dockerImage.inside(args) {
            sh 'node /app/index.js'
          }
        }
      }
    }

    stage('Email resulting PDF') {
      steps {
        // emailext body: 'Attached is the Kudos Dashboard for this week.',
        //     mimeType: 'text/html',
        //     subject: "Kudos Dashboard",
        //     to: "bob@adhocteam.us",
        //     replyTo: "no-reply@github.com",
        //     attachmentsPattern: "kudos.pdf"
        sh '''
            DAY=$(date +"%B %d, %Y")
            echo "Attached is the Kudos Dashboard for this week." | mail -s "Kudos Dashboard - ${DAY}" -A kudos.pdf bob@adhocteam.us
           '''
      }
    }
  }

  post {
    always {
      deleteDir()
    }
  }
}
