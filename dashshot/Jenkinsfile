pipeline {
  agent {
    label 'vetsgov-general-purpose'
  }

  stages {
    stage('Create PDF') {
      steps {
        dir("dashshot") {
          script {
            dockerImage = docker.build('dashshot')
            args = "-v ${pwd()}:/pdf"
            dockerImage.inside(args) {
              sh 'node /app/index.js'
            }
          }
        }
      }
    }

    stage('Slack Results') {
      steps {
        withCredentials([string(credentialsId: 'slack-dashboard-token', variable: 'TOKEN')]) {
          dir("dashshot") {
            sh "curl -s -F file=@'kudos.pdf' -F channels='analytics-deploys' -F title='*Kudos Weekly Dashboard* for <!date>' -F initial_comment='Live URL: https://datastudio.google.com/open/0B-eryOVvbpHbcUNSbTlnWjZaVzA' -F 'token=${TOKEN}' https://slack.com/api/files.upload"
            sh "curl -s -F file=@'rainbows.pdf' -F channels='analytics-deploys' -F title='*Rainbows Weekly Dashboard* for <!date>' -F initial_comment='Live URL: https://datastudio.google.com/open/0B-eryOVvbpHbR3o4bDBfLTZFSmM' -F 'token=${TOKEN}' https://slack.com/api/files.upload"
            sh "curl -s -F file=@'unicorns.pdf' -F channels='analytics-deploys' -F title='*Unicorns Weekly Dashboard* for <!date>' -F initial_comment='Live URL: https://datastudio.google.com/open/13_08yLsP1ncNgyWr5Ug__-fXEBCVjRs2' -F 'token=${TOKEN}' https://slack.com/api/files.upload"
          }
        }
      }
    }
  }

  post {
    always {
      deleteDir()
    }
  }
}
