def slack_delivery(chan, file) {
  slackSend message: '<!here> Weekly team dashboard delivery:',
          channel: chan,
          attachments: file,
          failOnError: true
}

pipeline {
  agent {
    label 'vetsgov-general-purpose'
  }

  stages {
    stage('Create PDF') {
      steps {
        dir("dashshot") {
          script {
            dockerImage = docker.build('dashshot')
            args = "-v ${pwd()}:/pdf"
            dockerImage.inside(args) {
              sh 'node /app/index.js'
            }
          }
        }
      }
    }

    stage('Slack Results') {
      steps {
        slack_delivery('#analytics-deploys', "dashshot/kudos.pdf")
        slack_delivery('#analytics-deploys', "dashshot/rainbows.pdf")
        slack_delivery('#analytics-deploys', "dashshot/unicorns.pdf")
      }
    }
  }

  post {
    always {
      deleteDir()
    }
  }
}
