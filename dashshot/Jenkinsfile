pipeline {
  agent {
    label 'vetsgov-general-purpose'
  }

  stages {
    stage('Create PDF') {
      steps {
        dir("dashshot") {
          script {
            dockerImage = docker.build('dashshot')
            args = "-v ${pwd()}:/pdf"
            dockerImage.inside(args) {
              sh 'node /app/index.js'
            }
          }
        }
      }
    }

    stage('Slack Results') {
      steps {
        slackSend(
          message: "Dashboard Snapshot for Rainbows",
          channel: "analytics-deploys",
          attachments: '''[{
            "fallback": "Screenshot of the dashboard",
            "color": "#112e51",
            "title": "Kudos Dashboard",
            "title_link": "https://datastudio.google.com/open/0B-eryOVvbpHbcUNSbTlnWjZaVzA",
            "image_url": "https://github.com/department-of-veterans-affairs/vets.gov-team/raw/master/Products/Analytics/dashboards/rainbows.pdf",
        }]'''
        )
      }
    }
  }

  post {
    always {
      deleteDir()
    }
  }
}
