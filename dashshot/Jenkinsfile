pipeline {
  agent {
    label 'vetsgov-general-purpose'
  }

  stages {
    stage('Create PDF') {
      steps {
        dir("dashshot") {
          script {
            dockerImage = docker.build('dashshot')
            args = "-v ${pwd()}:/pdf"
            dockerImage.inside(args) {
              sh 'node /app/index.js'
            }
          }
        }
      }
    }

    stage('Slack Results') {
      steps {
        slackSend message: '<!here> Weekly team dashboard delivery:',
                channel: '#analytics-deploys',
                attachments: "dashshots/kudos.pdf",
                failOnError: true
      }
    }
  }

  post {
    always {
      deleteDir()
    }
  }
}
