pipeline {
  agent {
    label 'vetsgov-general-purpose'
  }

  stages {
    stage('Create PDF') {
      steps {
        dir("dashshot") {
          script {
            dockerImage = docker.build('dashshot')
            args = "-v ${pwd()}:/pdf"
            dockerImage.inside(args) {
              sh 'node /app/index.js'
            }
          }
        }
      }
    }

    stage('Slack Results') {
      steps {
        withCredentials([string(credentialsId: 'slack-token', variable: 'TOKEN')]) {
          sh "ls -al dashshot"
          sh "curl -s -F file=@'dashshot/kudos.pdf' -F channels='C7VV5NJ57' -F initial_comment=\"Weekly Dashboard Update\" -F token=$TOKEN https://slack.com/api/files.upload"
        }
      }
    }
  }

  post {
    always {
      deleteDir()
    }
  }
}
