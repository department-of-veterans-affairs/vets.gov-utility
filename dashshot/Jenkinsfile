def send_dash(chan, file) {
  slackSend message: '<!here> Weekly team dashboard delivery:',
    channel: chan,
    attachments: "[{ \"fallback\": \"Screenshot of the dashboard\", \"color\": \"#112e51\", \"title\": \"Kudos Dashboard\", \"title_link\": \"https://datastudio.google.com/open/0B-eryOVvbpHbcUNSbTlnWjZaVzA\", \"image_url\": \"${file}\"}]",
    failOnError: true
}

pipeline {
  agent {
    label 'vetsgov-general-purpose'
  }

  stages {
    stage('Create PDF') {
      steps {
        dir("dashshot") {
          script {
            dockerImage = docker.build('dashshot')
            args = "-v ${pwd()}:/pdf"
            dockerImage.inside(args) {
              sh 'node /app/index.js'
            }
          }
        }
      }
    }

    stage('Slack Results') {
      steps {
        script {
          send_dash("analytics_deploys", "https://github.com/department-of-veterans-affairs/vets.gov-team/raw/master/Products/Analytics/dashboards/rainbows.pdf")
        }
      }
    }
  }

  post {
    always {
      deleteDir()
    }
  }
}
